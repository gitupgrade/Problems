//link: https://codeforces.com/contest/2131/problem/B
import java.util.Scanner;

public class aa {
    public static void main(String[] args) {
         Scanner sc = new Scanner(System.in);
        int t = sc.nextInt(); 
        while (t-- > 0) {
            int n = sc.nextInt();
            System.out.println("");

            if(n==2)
            {
                System.out.println(-1+" "+2);
            }
            if(n>2)
            {
                for(int i=1;i<=n;i++)

                {
                    if (i % 2 == 0 && i!=n) {
                        System.out.print(3);
                    } 
                    if (i % 2 != 0 && i!=n) {
                        System.out.print(-1);
                    }
                   
                    if(i==n && i % 2 == 0)
                    {
                        System.out.print(2);
                    }
                    if(i==n && i % 2 != 0)
                    {
                        System.out.print(-1);
                    }
                    if(i!=n)
                    {
                        System.out.print(" ");
                    }

                    

                }
            }
          
        }
        sc.close();

    }
}
