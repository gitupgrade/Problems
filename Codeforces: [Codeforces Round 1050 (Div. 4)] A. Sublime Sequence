//link: https://codeforces.com/contest/2148/problem/A
import java.util.Scanner;

public class farmer {
    public static void main(String[] args) {
        Scanner sc = new Scanner(System.in);
        int t=sc.nextInt();
        
        for(int i=0;i<t;i++)
        {
            int x=sc.nextInt();
            int n=sc.nextInt();
            if(n%2==0)
            {
                System.out.println(0);
            }
            else{
                System.out.println(x);
            }
        }
        sc.close();

    }
    
}
