//link: https://www.codechef.com/problems/WOLFDOWN
#include <bits/stdc++.h>

using namespace std;



int main()

{

    int T;

    cin >> T;

    while (T--)

    {

        int ans = 0;

        int n;

        string s;

        cin >> n;

        cin >> s;

        for (int i = 0; i < s.length() - 1; i++)

        {

            for (int i = 0; i < s.length() - 1; i++)

            {

                if (s[i] == '1' && s[i + 1] == '0')

                {

                    s[i + 1] = '1';

                }

            }

        }

          for (int i = 0; i < s.length(); i++)

          {

            if(s[i]=='0')

            {

                ans=ans+1;

            }

          }

          cout<<ans<<endl;

    }

}

