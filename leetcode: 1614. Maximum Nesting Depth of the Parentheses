//link: https://leetcode.com/problems/maximum-nesting-depth-of-the-parentheses/description/
class Solution {
public:
    int maxDepth(string s) {
        int count=0;
        int m=0;
        for(char c:s)
        {
            if(c=='(')
            {
                count++;
            }
             if(c==')')
            {
                count--;
            }
            m=max(m,count);


        }
        return m;
    }
};
