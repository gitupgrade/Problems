//link:https://codeforces.com/contest/2192/problem/A
#include <bits/stdc++.h>
using namespace std;
int count(string s, int n)
{
    int c = 1;
    for (int i = 0; i < n - 1; i++)
    {
        if (s.at(i) != s.at(i + 1))
        {
            c = c + 1;
        }
    }
    return c;
}
int main()
{

    int T;
    cin >> T;
    while (T--)
    {
        int ans = 0;
        int n;
        cin >> n;
        string s;
        cin >> s;
        if (n == 1)
        {
            cout << 1<<"\n";
            continue;
        }
        
        else
        {
            for (int k = 0; k < n; k++)
            {
                k %= n;
                string rot = s.substr(n - k) + s.substr(0, n - k);
                ans = max(ans, count(rot, n));
            }
        }
        cout<<ans<<"\n";
    }
    return 0;
}
