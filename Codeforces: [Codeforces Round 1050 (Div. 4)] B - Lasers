//link: https://codeforces.com/contest/2148/problem/B
import java.util.*;
import java.lang.*;
import java.io.*;

public class Solution
{
	public static void main (String[] args) throws java.lang.Exception
	{
	  Scanner sc = new Scanner(System.in);

        int t = sc.nextInt(); 
        

        while (t-- > 0) {
            int n = sc.nextInt();
            int m = sc.nextInt();
            long x = sc.nextLong();
            long y = sc.nextLong();
        long[] a = new long[n];
            for (int i = 0; i < n; i++) {
                a[i] = sc.nextLong();
            }

            long[] b = new long[m];
            for (int j = 0; j < m; j++) {
                b[j] = sc.nextLong(); 
            }
            System.out.println((n+m));

            
        }

       
        sc.close();

	}
}
