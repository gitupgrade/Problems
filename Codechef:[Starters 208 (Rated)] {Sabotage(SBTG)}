//link: https://www.codechef.com/START208D/problems/SBTG
#include <bits/stdc++.h>
using namespace std;
int main()
{    int T;
    cin>>T;
    while(T--)
    { int n;
    int x;
    int k;
    int c=0;
    cin>>n;
    cin>>x;
    cin>>k;
    int l=n;
     vector<int> a(n);
    for(int i=0;i<l;i++)
    {
         cin>>a[i];
    }
sort(a.begin(), a.end(), greater<int>());
  for(int i=0;i<k;i++)
  {
    a[i]=0;
    x=x+100;
  }
     for(int i=0;i<l;i++)
  {
    if(a[i]>x)
    {   
        c=c+1;
    }
  }
     cout<<(c+1)<<endl;

    }
    return 0;
}
